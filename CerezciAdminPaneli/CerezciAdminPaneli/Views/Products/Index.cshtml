@model IEnumerable<Model.Products>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Ürünlerin Listesi Ve Özellikleri</h2>
<table class="table table-bordered mt-3">
    <tr>
        <td><b>Ürün Adı</b></td>
        <td><b>Ürün Tipi</b></td>
        <td><b>Ürün Üretim Yeri</b></td>
        <td><b>Ürün Fiyatı</b></td>
        <td><b>Ürün Resmi</b></td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.ProductType </td>
            <td>@item.ProductPlace</td>
            <td>@item.ProductPrice</td>
            <td><img src="@item.ProductImage" width="100" height="100" /></td>
            <td>
                @Html.ActionLink("Güncelle", "Edit", new { Id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Sil", "Delete", new { Id = item.Id })
            </td>
        </tr>
    }
</table>
